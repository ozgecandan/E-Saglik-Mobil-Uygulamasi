<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="275dp"
    android:paddingTop="20dp">

    <android.support.v7.widget.CardView
        android:background="@drawable/circle"
        android:layout_width="wrap_content"
        android:layout_height="275dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:background="#f2f2f2"
            android:layout_width="match_parent"
            android:layout_height="275dp">

            <TextView
                android:id="@+id/txtSehir"
                android:layout_width="198dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/txtHastane"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/yazi"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtKan"
                android:layout_width="255dp"
                android:layout_height="50dp"
                android:layout_below="@+id/txtHastane"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/yazi"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTelefon"
                android:layout_width="235dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="28dp"
                android:fontFamily="@font/yazi"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtHastane"
                android:layout_width="327dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/yazi"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/telephoneImage"
                android:layout_width="73dp"
                android:layout_height="67dp"
                android:layout_alignBottom="@+id/txtSehir"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/telephone" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>




</RelativeLayout>